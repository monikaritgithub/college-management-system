@model OracleSampleProject.Models.LessonModel

@{
    ViewData["Title"] = "Edit Lesson";
}

<h1>Edit Lesson</h1>

<form asp-action="EditLesson" method="post">
    <div class="form-group">
        <label asp-for="CourseId">Course ID</label>
        <input asp-for="CourseId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="LessonNo">Lesson No</label>
        <input asp-for="LessonNo" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="LessonTitle">Lesson Title</label>
        <input asp-for="LessonTitle" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
